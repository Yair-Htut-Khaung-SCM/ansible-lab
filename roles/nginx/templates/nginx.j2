user nginx;
worker_processes auto;
pid /run/nginx.pid;
worker_rlimit_nofile 16384;

events {
    worker_connections 4096;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    # http_user_agentの値に応じて、loggableの値を設定する
    map $http_user_agent $loggable {
        ~ELB-HealthChecker 0;
        default            1;
    }

    # ELB-HealthCheckerのアクセスログを出力しないようにする
    # loggableが1ならmainコンテキストについて、access.logを出力
    access_log  /var/log/nginx/access.log  main if=$loggable;
    error_log /var/log/nginx/error.log;

    tcp_nopush          on;
    tcp_nodelay         on;
    server_tokens       off;
    keepalive_timeout   65;
    types_hash_max_size 4096;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    gzip_static always;
    gzip on;
    gzip_vary on;
    gzip_types text/css application/javascript application/json application/octet-stream;

    client_body_buffer_size 64k;
    fastcgi_buffer_size 32k;
    fastcgi_buffers 8 16k;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    client_max_body_size 8M;

    server {
        listen       80;
        listen       [::]:80;
        server_name  _;

        root /var/www/wordpress;
        index index.php index.html index.htm;

        # http_user_agentの値がELB-HealthCheckerなら200を返す
        if ($http_user_agent ~* ELB-HealthChecker) {
            return 200;
        }

        location ~* /wp-config.php {
            deny all;
        }

        location /himitsu {
            return 301 "https://gakcomic.gakken.jp/comic/tag/%E3%81%BE%E3%82%93%E3%81%8C%E3%81%A7%E3%82%88%E3%81%8F%E3%82%8F%E3%81%8B%E3%82%8B%E3%82%B7%E3%83%AA%E3%83%BC%E3%82%BA";
        }

        location ^~ /extra/meisaku10/senkyo2022/ {
            alias /var/www/extra/meisaku10/senkyo2022/;
            index index.html;
            try_files $uri $uri/ /index.php?$args;

            location ~* \.(js|css|png|gif|jpg|jpeg|svg|ico)$ {
                access_log off;
            }
        }

        location ~ \.php$ {
            fastcgi_pass  unix:/var/run/php-fpm/www.sock;
            fastcgi_read_timeout 120s;
            fastcgi_index index.php;
            fastcgi_intercept_errors on;

            include fastcgi_params;
            fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        }

        location / {
            try_files $uri $uri/ /index.php?$args;
        }

        location ~ .*\.(js|css|png|gif|jpg|jpeg|svg|ico) {
            access_log off;
        }

        location = /favicon.ico {
            log_not_found off;
            access_log off;
        }

        location = /robots.txt {
            log_not_found off;
            access_log off;
        }
    }
}
